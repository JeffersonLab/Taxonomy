{
    "name": "jlab/taxonomy",
    "type": "library",
    "description": "Taxonomy package for Laravel inspired by Drupal",
    "keywords": [
        "jlab",
        "taxonomy"
    ],
    "homepage": "https://github.com/JeffersonLab",
    "license": "MIT",
    "authors": [
        {
            "name": "Theo Larrieu",
            "homepage": "https://github.com/theojlab",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0",
        "kalnoy/nestedset": "^6.0",
        "laravel/legacy-factories": "^1.3"
    },

    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "orchestra/testbench": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Jlab\\Taxonomy\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Jlab\\Taxonomy\\TaxonomyServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
