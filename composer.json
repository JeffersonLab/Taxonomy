{
    "name": "jlab/taxonomy",
    "type": "library",
    "description": "Taxonomy package for Laravel inspired by Drupal",
    "keywords": [
        "jlab",
        "taxonomy"
    ],
    "homepage": "https://github.com/JeffersonLab",
    "license": "MIT",
    "authors": [
        {
            "name": "Theo Larrieu",
            "homepage": "https://github.com/theojlab",
            "role": "Developer"
        }
    ],
    "require": {
      "php" : "~7.0",
      "illuminate/support": "~5.5",
      "lord/laroute": "2.*",
      "kalnoy/nestedset": "4.*"
    },

    "require-dev": {
        "orchestra/testbench": "~3.5",
        "phpunit/phpunit" : ">=5.7",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Jlab\\Taxonomy\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Jlab\\Taxonomy\\TaxonomyServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
